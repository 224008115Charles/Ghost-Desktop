<div class="win-hamburger">
    <button title="Menu" class="win-button" onclick={{action 'popupMenu'}} onmousedown={{action 'mousedown'}}>
        <svg class="win-icon" x="0px" y="0px" viewBox="0 0 10.2 10.2">
        <rect fill="#fff" width="10" height="1"/>
        <rect fill="#fff" y="4" width="10.2" height="1" />
        <rect fill="#fff" y="8" width="10.2" height="1" />
        </svg>
    </button>
</div>
<div class="win-spacer"></div>
<div class="win-title">
    <img src="assets/img/ghost-logo.svg" alt={{title}} class="logo" />
</div>
<div class="win-spacer"></div>
<div class="win-controls">
    <button title="Minimize" class="win-button" onclick={{action 'minimize'}} onmousedown={{action 'mousedown'}}>
        <svg class="win-icon" x="0px" y="0px" viewBox="0 0 10.2 1">
            <rect fill="#fff" width="10.2" height="1"/>
        </svg>
    </button>
    {{#if isMaximized}}
        <button title="Unmaximize" class="win-button" onclick={{action 'unmaximize'}} onmousedown={{action 'mousedown'}}>
           <svg class="win-icon" x="0px" y="0px" viewBox="0 0 10.2 10.2">
                <path fill="#fff" d="M2.1,0v2H0v8.1h8.2v-2h2V0H2.1z M7.2,9.2H1.1V3h6.1V9.2z M9.2,7.1h-1V2H3.1V1h6.1V7.1z" />
          </svg>
        </button>
    {{else}}
        <button title="Maximize" class="win-button" onclick={{action 'maximize'}} onmousedown={{action 'mousedown'}}>
            <svg class="win-icon" x="0px" y="0px" viewBox="0 0 10.2 10.2">
                <path fill="#fff" d="M0,0v10.1h10.2V0H0z M9.2,9.2H1.1V1h8.1V9.2z" />
            </svg>
        </button>
    {{/if}}
    <button title="Close" class="win-button"  onclick={{action 'close'}} onmousedown={{action 'mousedown'}}>
        <svg class="win-icon" x="0px" y="0px" viewBox="0 0 10.2 10.2">
            <polygon fill="#fff" points="10.2,0.7 9.5,0 5.1,4.4 0.7,0 0,0.7 4.4,5.1 0,9.5 0.7,10.2 5.1,5.8 9.5,10.2 10.2,9.5 5.8,5.1" />
        </svg>
    </button>
</div>