{{!-- Left "Quick Swich" Area  --}}

{{#if blogs}}
    {{gh-switcher 
        blogs=blogs
        switchToBlog="switchToBlog"
        showAddBlog="showAddBlog"
        blogRemoved="blogRemoved"
    }}
{{/if}}

{{!-- Right Side: Main Content Area  --}}

{{#if isAddBlogVisible}}
    {{gh-add-blog blogAdded="blogAdded"}}
{{/if}}

{{#if blogs}}
    {{#each blogs as |blog|}}
        {{gh-instance-host blog=blog}}
    {{/each}}
{{/if}}
