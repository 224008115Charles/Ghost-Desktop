<div class="gh-flow">
    <div class="gh-flow-content-wrap">
        <section class="gh-flow-content fade-in">
            <p>Welcome! Before we get started, please tell us where to find your blog:</p>
            <form id="reset" method="post" novalidate="novalidate" {{action "addBlog" on="submit"}}>
                <div class="{{if isUrlInvalid "error"}}">
                    <span class="input-icon icon-gh">
                        {{gh-input type="url" name="url" placeholder="https://myblog.com/ghost/" autocorrect="off" autofocus="autofocus" focusOut=(action "validateUrl") value=url title=urlError}}
                    </span>
                </div>
                <div class="{{if isIdentificationInvalid "error"}}">
                    <span class="input-icon icon-mail">
                        {{gh-input class="gh-input email" type="email" placeholder="Email Address" name="identification" autocapitalize="off" autocorrect="off" focusOut=(action "validateIdentification") value=identification title=identificationError}}
                    </span>
                </div>
                <div class="{{if isPasswordInvalid "error"}}">
                    <span class="input-icon icon-lock">
                        {{gh-input class="password" type="password" placeholder="Password" name="password" value=password autocorrect="off" focusOut=(action "validatePassword")}}
                    </span>
                </div>
                {{#gh-spin-button disabled=hasError class="btn btn-blue btn-block add-blog" type="submit" submitting=isSubmitting autoWidth="false"}}Add Blog{{/gh-spin-button}}
            </form>
            <p class="main-error">{{{flowErrors}}}</p>
        </section>
    </div>
</div>
