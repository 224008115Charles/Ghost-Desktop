<div class="gh-flow">
    <div class="gh-flow-content-wrap">
        <section class="gh-flow-content fade-in">
            <p>Welcome! Before we get started, please tell us where to find your blog:</p>
            <form id="reset" method="post" novalidate="novalidate" {{action "addBlog" on="submit"}}>
                <span class="input-icon icon-gh">
                    {{gh-input type="url" name="url" placeholder="https://myblog.com/ghost/" autocorrect="off" autofocus="autofocus" value=url}}
                </span>
                <span class="input-icon icon-mail">
                    {{gh-input class="gh-input email" type="email" placeholder="Email Address" name="identification" autocapitalize="off" autocorrect="off" value=identification}}
                </span>
                <span class="input-icon icon-lock">
                    {{gh-input class="password" type="password" placeholder="Password" name="password" value=password autocorrect="off"}}
                </span>
                {{#gh-spin-button class="btn btn-blue btn-block add-blog" type="submit" submitting=submitting autoWidth="false"}}Add Blog{{/gh-spin-button}}
            </form>
            <p class="main-error">{{{flowErrors}}}</p>
        </section>
    </div>
</div>
